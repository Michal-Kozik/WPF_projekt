                </Grid>
            </TabItem>
            <TabItem Header="Klienci">
                <!--Klienci-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.ColumnSpan="2" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Margin="10">Spis zarejestrowanych klientów</Label>
                    <ListBox Name="ClientsListBox" Grid.Row="1" BorderBrush="Black" BorderThickness="3" Margin="5" DisplayMemberPath="EverythingToString">
                        <!--
                        <ListBoxItem HorizontalContentAlignment="Stretch" BorderBrush="DarkGray" BorderThickness="1" Margin="1, 1">
                            <Label>Jakieś ogólne dane na temat klienta</Label>
                        </ListBoxItem>
                        -->
                    </ListBox>
                    <GroupBox DataContext="{Binding ElementName=ClientsListBox, Path=SelectedItem}" Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="3" Margin="5">
                        <!--
                        <TextBlock>Kontener ze<LineBreak/>szczegółowymi danymi<LineBreak/>
                        o danym kliencie.<LineBreak/>Bez problemu moge<LineBreak/>
                        dodać tu jakieś obrazki,<LineBreak/>przyciski itp.</TextBlock>
                        -->
                        <TextBlock TextWrapping="Wrap" Text="{Binding Path=Details}"></TextBlock>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Zamówienia">
                <!--Zamówienia-->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.ColumnSpan="2" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Margin="10">Podgląd zamówień</Label>
                    <ListBox Grid.Row="1" BorderBrush="Black" BorderThickness="3" Margin="5">
                        <ListBoxItem HorizontalContentAlignment="Stretch" BorderBrush="DarkGray" BorderThickness="1" Margin="1, 1">
                            <Label>Jakieś ogólne dane na temat zamówienia</Label>
                        </ListBoxItem>
                        <ListBoxItem HorizontalContentAlignment="Stretch" BorderBrush="DarkGray" BorderThickness="1" Margin="1, 1">
                            <Label>Jakieś ogólne dane na temat zamówienia</Label>
                        </ListBoxItem>
                        <ListBoxItem HorizontalContentAlignment="Stretch" BorderBrush="DarkGray" BorderThickness="1" Margin="1, 1">
                            <Label>Jakieś ogólne dane na temat zamówienia</Label>
                        </ListBoxItem>
                        <ListBoxItem HorizontalContentAlignment="Stretch" BorderBrush="DarkGray" BorderThickness="1" Margin="1, 1">
                            <Label>Jakieś ogólne dane na temat zamówienia</Label>
                        </ListBoxItem>
                    </ListBox>
                    <GroupBox Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="3">
                        <TextBlock>Kontener ze<LineBreak/>szczegółowymi danymi<LineBreak/>
                        o danym zamówieniu.<LineBreak/>Bez problemu moge<LineBreak/>
                        dodać tu jakieś obrazki,<LineBreak/>przyciski itp.</TextBlock>
                    </GroupBox>
                </Grid>
            </TabItem>
            <TabItem Header="Profil">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Label Grid.ColumnSpan="3" FontSize="30" HorizontalAlignment="Center" FontWeight="Bold" Margin="10">Profil</Label>
                    <StackPanel Grid.Row="1" Grid.Column="1">
                        <Label>Nazwa użytkownika: [nazwa]</Label>
                        <Label>Poczta: [adres]</Label>
                        <Label>Hasło: [ha***]</Label>
                        <Label>Nwm, hasło jest chyba bez sensu</Label>
                        <Label>Nie wiem co tu dać</Label>
                        <Button Height="30" Width="100" Margin="0,30">Wyloguj</Button>
                    </StackPanel>
                </Grid>
            </TabItem>
